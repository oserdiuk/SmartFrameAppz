@model SmartFrame.Models.Weather.WeatherCompareViewModel

@{
    ViewBag.Title = "Compare";
}

<div>
    <h4>Compare weather from your device and from online resource</h4>
    <hr />
    <table>
        <tr>
            <th>
                Online
            </th>
            <th>
                Saved
            </th>
        </tr>
        @for (int i = 0; i < Model.WeatherOnline.Count; i++)
        {
            <tr>
                <td>
                    @Model.WeatherOnline[i]
                </td>
                <td>
                    @if (i < Model.WeatherSaved.Count)
                    {
                        @Model.WeatherSaved[i]
                    }
                </td>
            </tr>
        }
    </table>
</div>
